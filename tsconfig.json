{
  "extends": "@react-native/typescript-config",
  "compilerOptions": {
    "baseUrl": ".", // Required for "paths" to work
    "paths": {
      "@assets/*": ["assets/*"],
      "@components/*": ["src/components/*"],
      "@screens/*": ["src/screens/*"],
      "@tps/*": ["src/types/*"],
      "@locales/*": ["locales/*"],
      "@constants/*": ["src/constants/*"],
      "@hooks/*": ["src/hooks/*"],
      "@utils/*": ["src/utils/*"],
      "@context/*": ["src/context/*"],
      "@wrapper/*": ["src/wrapper/*"],
      "@store/*": ["src/store/*"],
      "@fetch/*": ["src/api/fetch/*"],
      "@query/*": ["src/api/query/*"],
      "@mutation/*": ["src/api/mutation/*"],
      "@storage/*": ["src/storage/*"]
    }
  }
}