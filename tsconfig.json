{
  "extends": "@react-native/typescript-config",
  "compilerOptions": {
    "baseUrl": ".", // Required for "paths" to work
    "paths": {
      "@src/*": ["src/*"],
      "@assets/*": ["assets/*"],
      "@components/*": ["src/components/*"],
      "@screens/*": ["src/screens/*"],
      "@types/*": ["src/types/*"],
      "@locales/*": ["locales/*"],
    }
  }
}